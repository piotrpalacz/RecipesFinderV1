@page
@model ExternalAPFI.Identity.Pages.Areas.Account.LoginModel


    <div class="main-container">
        <form action="" method="post">
            <div class="login-container">
                <div>
                    <img src="/static/RecipeFinderLogo.png" style="width: 200px; margin-top:40px;">
                </div>
                <div>
                    <h2>Login to your account</h2>
                </div>
                <div>
                    <label for="username" class="label-login-words"><b>Username</b></label>
                    <input type="text" placeholder="username or email" name="username" required>

                    <label for="pswd" class="label-login-words"><b>Password</b></label>
                    <input type="password" placeholder="Enter your password" name="pswd" required>

                    <button class="btn-login" type="submit">Login</button>
                    <label>
                        <input type="checkbox" checked="checked" name="remember"> Remember me
                    </label>
                </div>
                <div>
                    <a href="">Forgot password?</a>
                </div>
                <div>
                    <p>Don't have an account? Sign in</p>
                </div>
            </div>
        </form>
    </div>
